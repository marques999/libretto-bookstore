<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.runtime.remoting>
    <application name="Server">
      <service>
        <wellknown mode="Singleton" type="MessageSingleton, MessageSingleton" objectUri="MessageServer"/>
        <wellknown mode="Singleton" type="UserSingleton, UserSingleton" objectUri="UserServer"/>
        <wellknown mode="Singleton" type="ChatroomSingleton, ChatroomSingleton" objectUri="ChatroomServer"/>
      </service>
      <channels>
        <channel ref="tcp" port="9002">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full"/>
          </serverProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
</configuration>